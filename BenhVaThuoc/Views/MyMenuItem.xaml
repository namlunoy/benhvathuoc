<UserControl x:Class="BenhVaThuoc.Views.MyMenuItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    d:DesignHeight="120" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot"
        Background="Black"
          Height="120"
          Width="400"
          >
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Image Name="image" Source="Assets/icons/ic_benh.png"  Height="100" Width="100" />
        <TextBlock Grid.Column="1" Foreground="White" Name="title" Text="title" HorizontalAlignment="Stretch" VerticalAlignment="Center" TextAlignment="Center" />

    
    </Grid>
</UserControl>